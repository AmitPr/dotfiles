# MUTT Email config

# Info
set from 	= "earsplit@gmail.com"
set realname 	= "Bill Indelicato"

# IMAP
set imap_user 	= "earsplit@gmail.com"
set imap_pass 	= PASSWORD
set folder 	= "imaps://imap.gmail.com:993"
set imap_check_subscribed

# SMTP
set smtp_url	= "smtp://earsplit@smtp.gmail.com:587/"


set editor	= "vim"

set spoolfile 	= "+INBOX"
set postponed 	= "+[Gmail]/Drafts"
set trash	= "imaps://imap.gmail.com/[Gmail]/Trash"

set header_cache 	=~/.mutt/cache/headers
set message_cachedir 	=~/.mutt/cache/bodies
set certificate_file 	=~/.mutt/certificates


bind editor <space> noop
bind editor ^T complete
bind pager gg top
bind pager G bottom
bind index gg first-entry
bind index G last-entry
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent Mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"

set move = no  #Stop asking to "move read messages to mbox"!

# Auto sort options
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes

# Auto check settings
set imap_check_subscribed = yes
set mail_check		= 60

# Auto display HTML
set mailcap_path    = ~/.mutt/mailcap
auto_view text/html

# Color settings
color normal	white	default
color message	white	default
color tree      red	default
#color   object     foreground       background
color   hdrdefault   blue              default
color   quoted       blue              default
color   signature    blue              default
color   attachment   red               default
color   message      brightblue        default
color   error        brightred         default
color   indicator    yellow      default
color   status       brightgreen       default 
color   tree         red             default
color   normal       white             default
color   markers      red               default
color   search       white             default
color   tilde        brightmagenta     default
color   index        blue              default ~F
color   index        brightblue        default "~N|~O"
